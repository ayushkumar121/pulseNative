<?xml version="1.0" encoding="UTF-8"?>
<ContentPage NavigationPage.HasNavigationBar="False" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="pulse.NightsPage">
    <ContentPage.Content>
        <AbsoluteLayout Margin="0,10,0,10">
            <ActivityIndicator IsRunning="true" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds=".5,.5,50,50" x:Name="loading" />
            <Label Text="Pulse" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0,50,50" HorizontalOptions="Center" FontSize="Small"/>

            <StackLayout AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
                <WebView Margin="0,20,0,10" x:Name="webView" IsVisible="false" Navigated="Handle_Navigated" Navigating="Handle_Navigating" 
                         VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            
            <ImageButton Source="cached.png"
                BackgroundColor="{StaticResource AccentColor}"
                CornerRadius="100"
                Padding="10"
                AbsoluteLayout.LayoutFlags="PositionProportional"  
                AbsoluteLayout.LayoutBounds=".95,.95,60,60" 
                Clicked="OnReloadButtonClicked" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
