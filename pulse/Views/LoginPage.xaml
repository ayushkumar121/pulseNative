<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             NavigationPage.HasNavigationBar="False"
             x:Class="pulse.LoginPage">
    
    <ContentPage.Content>
        <StackLayout>
            <Image Source="icon" Margin="30" />
            
            <Entry x:Name="userName" Placeholder="John Doe" />
            <Entry x:Name="userEmail" Placeholder="someone@example.com" Keyboard="Email"/>
            <Entry x:Name="userMobile" Placeholder="111111111" Keyboard="Telephone" MaxLength="10"/>
            
            <Picker SelectedIndexChanged="Handle_SelectedIndexChanged" x:Name="StatesPicker"/>
            <Picker x:Name="CollegePicker" />
            
            <Button x:Name="Registerbutton" Text="Register" Margin="10" Clicked="Login" />
            
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
